<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ECOPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>eco.entidades.Producto</class>
    <class>eco.entidades.Proveedor</class>
    <class>eco.entidades.Usuarios</class>
    <class>eco.entidades.Tipos</class>
    <class>eco.entidades.Marca</class>
    <class>eco.entidades.Moneda</class>
    <class>eco.entidades.Senias</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/eurocamp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="cavaliere"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
